{
  "name": "prayer_web",
  "short_name": "Prayer",
  "id": "/",
  "description": "Prayer time app for Kerkuk",
  "start_url": "/prayer_web/",
  "scope": "/prayer_web/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#008080",
  "orientation": "portrait-primary",

  "icons": [
    {
      "src": "icons/Icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icons/Icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],

  "shortcuts": [
    {
      "name": "Open Namaz Times",
      "short_name": "Times",
      "description": "Quick access to prayer times",
      "url": "/prayer_web/",
      "icons": [{ "src": "icons/Icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Open the settings page",
      "url": "/prayer_web/settings",
      "icons": [{ "src": "icons/Icon-192.png", "sizes": "192x192" }]
    }
  ],

  "screenshots": [
    {
      "src": "Icons/screenshot-wide.png",
      "sizes": "1362x460",
      "type": "image/png"
    },
    {
      "src": "Icons/screenshot-mobile.png",
      "sizes": "1960x1280",
      "type": "image/png"
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+namaz",
      "url": "/prayer_web/?link=%s"
    }
  ]
}
